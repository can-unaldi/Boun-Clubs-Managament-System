@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Index";
}

<div>
    <h2>Role List</h2>

</div>
<div class="text-danger" asp-validation-summary="All"></div>
@if (TempData["message"] != null) 
{ 
    <div class="alert alert-success">
        @TempData["message"]
    </div>
}
<table class="table table-hover table-striped table-responsive">
    <tr>
        <th>Role Id</th>
        <th>Role Name</th>
        <th>Users</th>
        <th></th>

    </tr>
    @if (Model.Count() == 0)
    {

        <tr>
            <td colspan="4" class="text-center">
                No Roles
            </td>
        </tr>

    }
    else
    {
        foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td identity-role="@user.Id"></td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@user.Id">
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                        <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a asp-action="Create" class="btn btn-default">Create User</a>


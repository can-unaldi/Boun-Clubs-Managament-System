@model RoleDetails
@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h2>Edit Role</h2>
</div>
<div class="text-danger" asp-validation-summary="All"></div>
<form asp-action="Edit" method="post">
    <input type="hidden" value="@Model.Role.Id" name="RoleId" />
    <input type="hidden" value="@Model.Role.Name" name="RoleName" />

    
    <div>
        <h4>@Model.Role.Name Rolüne Kullanıcı Ekle</h4>
    </div>
    <table class="table table-hover table-striped">
        @if (Model.NonMembers.Count() == 0)
        {
            <tr>
                <td colspan="2">
                    Eklenecek Kullanıcı Yok
                </td>
            </tr>
        }
        else
        {
            foreach (var user in Model.NonMembers)
            {
                <tr>
                    <td>
                        @user.UserName
                    </td>
                    <td>
                        <input type="checkbox" value="@user.Id" name="IdsToAdd" />
                    </td>
                </tr>
            }
        }
    </table>
    <div>
        <h4>@Model.Role.Name Rolünden Kullanıcı Sil</h4>
    </div>
    <table class="table table-hover table-striped">
        @if (Model.Members.Count() == 0)
        {
            <tr>
                <td colspan="2">
                    Silinecek Kullanıcı Yok
                </td>
            </tr>
        }
        else
        {
            foreach (var user in Model.Members)
            {
    <tr>
        <td>
            @user.UserName
        </td>
     
        <td>
            <input type="checkbox" value="@user.Id" name="IdsToDelete" />
        </td>
    </tr>
            }
        }
    </table>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-danger">Cancel</a>

</form>


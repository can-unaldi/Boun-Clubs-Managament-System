@model IEnumerable<Club>
@{
    ViewData["Title"] = "Index";
}

<div>
    <h2>Kulüpler</h2>

</div>
<table class="table table-striped table-hover table-responsive">
    <tr>
        <th>Külübün Adı</th>
        <th>Web Site</th>
        <th>Kulüp Detayları</th>
    </tr>
    @if (Model.Count() == 0)
    {

        <tr>
            <td colspan="4" class="text-center">
                Gösterilecek kulüp yok.
            </td>
        </tr>
    }
    else
    {
        foreach (var club in Model)
        {
            <tr>
                <td>@club.ClubName</td>
                <td><a href="@club.ClubWebSite" target="_blank">Web Site</a></td>
                <td>
                    <a asp-action="Details" asp-route-id="@club.ClubId" class="btn btn-primary">Detaylar</a>
                </td>
            </tr>
        }
    }
</table>


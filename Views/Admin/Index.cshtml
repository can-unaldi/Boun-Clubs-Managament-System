@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<div>
    <h2>User List</h2>

</div>
<table class="table table-striped table-hover table-responsive">
    <tr>
        <th>User Id</th>
        <th>User Name</th>
        <th>Mail</th>
        <th>Delete User</th>

    </tr>
    @if (Model.Count() == 0)
    {

        <tr>
            <td colspan="4" class="text-center">
                No Users
            </td>
        </tr>

    }
    else
    {
        foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@user.Id">
                        <a asp-action="Update" asp-route-id="@user.Id" class="btn btn-primary">Update</a>
                        <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>
<a asp-action="Create" class="btn btn-default">Create User</a>
<a asp-action="Clubs" class="btn btn-default">Clubs</a>
<a asp-action="Events" class="btn btn-default">Events</a>
<a asp-action="Index" asp-controller="AdminRole" class="btn btn-default">Roles</a>


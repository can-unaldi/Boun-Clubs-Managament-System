@model IEnumerable<Club>
@{
    ViewData["Title"] = "Clubs";
}

<div class="bg-primary text-center">
    <h2>Club List</h2>

</div>
<table class="table table-bordered table-striped ">
    <tr>
        <th>Club Id</th>
        <th>Club UserName</th>
        <th>Club Name</th>
        <th>Update/Delete Club</th>
    </tr>
    @if (Model.Count() == 0)
    {

        <tr>
            <td colspan="4" class="text-center">
                No Clubs
            </td>
        </tr>

    }
    else
    {
        foreach (var club in Model)
        {
            <tr>
                <td>@club.ClubId</td>
                <td>@club.ClubUserName</td>
                <td>@club.ClubName</td>
                <td>
                    <a asp-action="Update" asp-controller="Club" asp-route-id="@club.ClubId" class="btn btn-primary">
                    Update
                    </a>
                    <a asp-action="Delete" asp-controller="Club" asp-route-id="@club.ClubId" class="btn btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
    }
</table>
<a asp-action="Create" asp-controller="Club" class="btn btn-primary">Create Club</a>


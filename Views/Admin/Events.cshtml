@model IEnumerable<Event>
@{
    ViewData["Title"] = "Events";
}

<div>
    <h2>Event List</h2>

</div>
<table class="table table-striped table-hover table-responsive">
    <tr>
        <th>Event Id</th>
        <th>Name Name</th>
        <th>Club Name</th>
        <th>Delete Event</th>
    </tr>
    @if (Model.Count() == 0)
    {

        <tr>
            <td colspan="4" class="text-center">
                No Events
            </td>
        </tr>

    }
    else
    {
        foreach (var clubEvent in Model)
        {
            <tr>
                <td>@clubEvent.EventId</td>
                <td>@clubEvent.EventName</td>
                <td>@clubEvent.ClubName</td>
                <td>
                   
                    <a asp-action="DeleteAdmin" asp-controller="Event" asp-route-id="@clubEvent.EventId" class="btn btn-danger">
                        Delete
                    </a>
                </td>
            </tr>
        }
    }
</table>


@model List<Event>
@{
    ViewData["Title"] = "Index";
}

<div class="bg-primary text-center">
    <h2>Onay Bekleyen Etkinlikler</h2>

</div>
<table class="table table-bordered table-striped ">
    <tr>
        <th>Etkinlik Adı</th>
        <th>Kulüp Adı</th>
        <th>Detaylar</th>
        <th>Rezervasyon Onayı</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" class="text-center">
                No Events
            </td>
        </tr>
    }
    else
    {
        foreach (var clubEvent in Model)
        {
            <tr>
                <td>@clubEvent.EventName</td>
                <td>@clubEvent.ClubName</td>
                <td>
                    <a asp-action="Details" asp-controller="Event" asp-route-id="@clubEvent.EventId" class="btn btn-primary">
                        Detaylar
                    </a>
                </td>
                <td>
                    <a asp-action="Approve" asp-controller="Reservation" asp-route-id="@clubEvent.EventId" class="btn btn-primary">
                        Onayla
                    </a>
                    <a asp-action="Deny" asp-controller="Reservation" asp-route-id="@clubEvent.EventId" class="btn btn-danger">
                        Reddet
                    </a>
                </td>
            </tr>
        }
    }
</table>


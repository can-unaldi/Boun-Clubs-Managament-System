@model Event 
@{
    ViewData["Title"] = "Update";
}

<div>
    <h2>Update Event</h2>

</div>
<form class="form-control-static form-inline" asp-action="Update" asp-controller="Event" method="post" class="form-horizontal">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="ClubName"></label>
        <br />
        <input asp-for="ClubName" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="EventName"></label>
        <br />
        <input asp-for="EventName" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <br />
        <input asp-for="StartDate" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <br />
        <input asp-for="EndDate" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="ParticipantCount"></label>
        <br />
        <input asp-for="ParticipantCount" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Revenue"></label>
        <br />
        <input asp-for="Revenue" type="checkbox" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Media"></label>
        <br />
        <input asp-for="Media" type="checkbox" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Type"></label>
        <br />
        <input asp-for="Type" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Place"></label>
        <br />
        <input asp-for="Place" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Speaker"></label>
        <br />
        <input asp-for="Speaker" class="form-control" />
    </div>
    <br />
    <br />
    <input type="submit" value="Create" class="btn btn-default" />
    <a asp-action="Manage" asp-controller="Club" class="btn btn-danger">Cancel</a>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

</form>

